<%= render 'shared/navbar', event: nil, header: "Events Near You" %>

<div class="main_container_events">
  <% @events.each do |event| %>
    <div style="background-image:url(<%= cl_image_path event.photo unless event.nil? %>)" class="event_cards">
        <%= link_to event_drinks_path(event.id) do %>
      <div class="gradient">
          <p><%= event.start_date.strftime("%b, %d") %></p>
          <p><%= event.end_date.strftime("%b, %d") %></p>
          <div class="text_center">
            <%= cl_image_tag event.logo, height: 100 %>
          </div>
      <% end %>
      </div>
    </div>
  <% end %>
</div>
