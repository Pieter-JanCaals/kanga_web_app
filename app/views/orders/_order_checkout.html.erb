<div class="gradient">
  <div class="eta-bar card">
    <div class="eta-left">
      <h5>ETA</h5>
      <h5><%= @order.bar.eta %> min</h5>
    </div>
    <div class="bar-right">
      <h4>Your order will be at:</h4>
      <p><%= @order.bar.name %><p>
    </div>
  </div>

  <div class="confirm-order card">
    <div class="checkout-confirm-left">
      <h4>Check Out</h4>
      <p>Please confirm your order</p>
    </div>
    <div class="add-item-right">
    <%= link_to "Add Item", event_drinks_path(@order.bar.event) %>
    </div>
  </div>
  <br>
  <div class="item-list">
    <ul>
      <% @order.order_drinks.each do |order_drink| %>
        <li class="text-white">
          <span class="item-list-right"><%= order_drink.amount %></span>
          <span class="item-list-center"><%= order_drink.drink.name %></span>
          <span class="item-list-left"><%= humanized_money_with_symbol(order_drink.price) %></span>
        </li>
      <% end %>
    </ul>
  </div>

  <h5>Total <%= humanized_money_with_symbol(@order.total_no_tax) %></h5>
  <h5>Taxes <%= humanized_money_with_symbol(@order.tax) %></h5>



  <%= simple_form_for @order do |f| %>
  <%= render "shared/plus_minus_form", input: :tip, f: f %>
  <p>Tip Amount</p>
    <h5 id="tip-amount"></h5>
    <h3 id="grand-total"><%= humanized_money_with_symbol(@order.total_with_tax) %></h3>

    <%= f.button :submit, "ORDER" %>
  <% end %>

  <%= javascript_pack_tag 'checkout' %>
</div>

