<div id="eta">
  <div class="map_bg">
    <div class="map_card">
      <div class="col-sm-3">
        <p>Wait Time</p>
        <p><strong class="eta_btn"><%= @event.closest_bar.eta %> </strong>min</p>
      </div>
      <div class="col-sm-6" style="padding-right: 50px;">
        <p>Location</p>
        <p style="padding-top: 10px;"><%= @event.closest_bar.name %></p>
      </div>
      <div class="col-sm-3">
        <%= image_tag 'ping.png', height:50, class: 'map_ping' %>
      </div>
    </div>
  </div>
</div>

<div id="map_open" class="hide">
  <div id="map_close">

  </div>
  <div id="map" style="width: 100%; margin-top:25px; height: 300px;" data-markers="<%= @bars.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" class="map_style">
  </div>
</div>

<div class="header_title">
  <h1 id="drink-title">We will let you know when your order is ready</h1>
</div>

<%= link_to "View Order", summary_order_path(@order) %>

<div class="confirm-map-box">
  <div class="text_center">
    <p>Present this QR code upon pick up</p>
    <div id="qr_code">
      <%= link_to notification_path do %>
      <%= raw @qr.as_html %>
      <% end %>
    </div>
  </div>
</div>
<div class="bottom_margin"></div>

<%= link_to 'Complete Order', orders_complete_path(@order), method: :post %>

