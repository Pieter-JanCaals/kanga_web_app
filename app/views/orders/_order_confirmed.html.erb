<div id="eta">
  <div class="map_bg">
    <div class="map_card">
        <p><strong class="eta_btn"><%= @event.closest_bar.eta %> </strong>min Waiting Time</p>
    </div>
  </div>
</div>
 <div class="map_container">
  <div class="overlay-map-color"><p style="padding-top: 10px;"><%= @event.closest_bar.name %></p></div>
  <div class="map" id="map" style="height: 300px !important; width: 100%" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" class="map_style">
  </div>
</div>

<div class="header_title">
  <h1 id="drink-title">We will let you know when your order is ready</h1>
</div>

<div class="summary">
<%= link_to "Order summary", summary_order_path(@order) %>
</div>

<div class="confirm-map-box">
  <div class="text_center">
    <p>Present this QR code upon pick up</p>
    <div id="qr_code">
      <%= link_to notification_path do %>
      <%= raw @qr.as_html %>
      <% end %>
    </div>
  </div>
</div>
<div class="bottom_margin"></div>

<div class="confirm_tab_secret"><%= link_to '.', orders_complete_path(@order), method: :post %></div>

<%= javascript_pack_tag 'mapbox' %>

